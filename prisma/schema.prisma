generator client {
  provider = "prisma-client-js"
}

// 连接 PostgreSQL（URL 从 .env 文件读取）
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Todo 数据模型（对应数据库表）
model Todo {
  id        String   @id @default(cuid())  // 自动生成唯一 ID
  title     String                        // 任务内容
  done      Boolean  @default(false)       // 完成状态（默认未完成）
  createdAt DateTime @default(now())       // 创建时间
}

// 新增：NextAuth 用户与账户模型
model User {
  id            String   @id @default(cuid())
  name          String?
  email         String   @unique
  emailVerified DateTime?
  image         String?
  password      String? // 凭证登录的哈希密码
  createdAt     DateTime @default(now())

  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}